<div class="shop-page-action-bar mt-30">

    <div class="container container-wide">
        <div class="action-bar-inner">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <nav class="pagination-wrap mb-10 mb-sm-0">
                        <ul class="pagination">
                            <% if(currentPage !==1 && previousPage !==1){ %>
                                <li class="active"><a href="?page=1">1</a></li>
                                <% } %>
                                    <!-- <i class="ion-ios-arrow-thin-left"></i> -->
                                    <% if(hasPreviousPage) {%>
                                        <li><a href="?page=<%= previousPage %>">Previous</a></li>
                                        <% } %>
                                            <li>
                                                <a href="?page=<%= currentPage %>">
                                                    <%= currentPage %>
                                                </a>
                                            </li>
                                            <% if(hasNextPage) {%>
                                                <li><a href="?page=<%= nextPage %>">Next</a></li>
                                                <% } %>
                                                    <% if(lastPage !==currentPage && nextPage !==lastPage) {%>
                                                        <a href="?page=<%= lastPage %>">
                                                            <%= lastPage %>
                                                        </a>
                                                        <% } %>
                        </ul>
                    </nav>
                </div>

                <div class="col-sm-6 text-center text-sm-right">
                    <p>
                        <%= i18n.__("Showing 1â€“8 of")%>
                            <span>
                                <%= totalNumItems %>
                            </span>
                            <%= i18n.__("result")%>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>