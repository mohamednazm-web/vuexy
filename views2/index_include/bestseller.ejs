<div class="best-seller-products-area sm-top">
    <div class="container container-wide">
        <div class="row">
            <div class="col-lg-5 m-auto text-center">
                <div class="section-title">
                    <h2 class="font-change">
                        <%= i18n.__("OUR NEWEST CAR FOR SALE")%>
                    </h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="product-wrapper">
                    <div class="product-carousel">
                        <!-- Start Product Item -->
                        <% carSales.forEach(function(product) { %>
                            <div class="product-item">
                                <div class="product-item__thumb">
                                    <a href="/singleCarSales?id=<%= product._id %>&categoreyId=<%= product.categories %>">
                                        <img class="thumb-primary" src="/<%= product.image[0] %>" alt="Product" />
                                    </a>
                                </div>
                                <div class="product-item__content">
                                    <h4 class="title">
                                        <a href="/singleCarSales?id=<%= product._id %>&categoreyId=<%= product.categories %>">
                                            <% if(locals.selectedI18n==='ku') {%>
                                                <%= product.productName %>
                                                    <% } else if(locals.selectedI18n==='ar'){%>
                                                        <%= product.productNameArabic %>
                                                            <% } else {%>
                                                                <%= product.productNameEnglish %>
                                                                    <% } %>
                                        </a>
                                    </h4>
                                    <% if(product.price) {%>
                                        <span class="price"><strong>Price:</strong>
                                        $<%= product.price %>
                                    </span>
                                        <% } %>
                                </div>
                            </div>
                            <% }); %>
                                <!-- End Product Item -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-12 text-center"><strong><a style="color:rgb(241, 21, 0); font-size: large;"
                        class="font change" href="/carSales">
                        <%= i18n.__("see more")%>
                    </a></strong></div>

        </div>

    </div>
</div>