<form class="form-horizontal" action="/admin_dashboard/updateBannerImage/<%=product[0]._id%>" method="post"
    enctype="multipart/form-data" style="padding: 9rem;">
    <fieldset>
        <!-- Form Name -->
        <legend>
            <%= i18n.__("imupdate")%>
        </legend>
        <a href="/admin_dashboard">
            <%= i18n.__("got admin dashboard")%>
        </a>
        <!-- File Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="imageBanner">
                <%= i18n.__("picture")%>
            </label>
            <div class="col-md-4">
                <span style="font-weight: bold;">
                    <%= i18n.__("Image size must be(481 x 335)")%>
                </span>
                <input id="imageBanner" name="imageBanner" placeholder="IMAGE UPLOAD" class="form-control input-md"
                    type="file">

            </div>
            <img style="width: 150px; height: 100pxs;" src="/<%= product[0].image %>" alt="">
        </div>
        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton">

            </label>
            <div class="col-md-4">
                <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-primary">
                    <%= i18n.__("SAVE CHANGES")%>
                </button>
            </div>
        </div>
    </fieldset>
</form>