<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<form class="form-horizontal" action="/admin_dashboard/createVedioProduct" method="post" enctype="multipart/form-data" style="padding: 9rem;" id="cpa-form">

    <fieldset>
        <!-- Form Name -->
        <legend>ADD PRODUCTS</legend>
        <a href="/admin_dashboard">
            <%= i18n.__("got admin dashboard")%>
        </a>
        <!-- Text input-->
        <% if (errMessageVideoExist.length > 0) { %>
            <div class="alert alert-danger font-change" style="font-size: 2rem; text-align: center;">
                <%= errMessageVideoExist %>
            </div>
            <% } %>
                <% if (messageSuccessAdd.length > 0) { %>
                    <div class="alert alert-success font-change" style="font-size: 2rem; text-align: center;">
                        <%= messageSuccessAdd %>
                    </div>
                    <% } %>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="title">
                        <%= i18n.__("title")%>
                    </label>
                            <div class="col-md-4">
                                <input id="title" name="title" placeholder="PRODUCT title" class="form-control input-md" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="titleArabic">
                        <%= i18n.__("titleArabic")%>
                    </label>
                            <div class="col-md-4">
                                <input id="titleArabic" name="titleArabic" placeholder="PRODUCT title Arabic" class="form-control input-md" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="titleEnglish">
                        <%= i18n.__("titleEnglish")%>
                    </label>
                            <div class="col-md-4">
                                <input id="titleEnglish" name="titleEnglish" placeholder="PRODUCT title English" class="form-control input-md" type="text">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="vedio">Vedio url</label>
                            <div class="col-md-4">
                                <input id="vedio" name="vedio" placeholder="PRODUCT VEDIO" class="form-control input-md" type="text">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <!-- File Button -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="vedioImage" required>Image product</label>
                                <div class="col-md-4">
                                    <input id="vedioImage" name="vedioImage" placeholder="IMAGE UPLOAD" class="form-control input-md" type="file" required>
                                </div>
                            </div>
                            <!-- Button -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="singlebutton">ADDING PRODUCT</label>
                                <div class="col-md-4">
                                    <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-primary">SUBMIT</button>
                                </div>
                            </div>
    </fieldset>
</form>